@model BlogPost.Models.AllBlogsModel

@{
    ViewBag.Title = "AllBlogs";
}

<h2>All Blogs</h2>

<p class="newBlog">
   <a href="@Url.RouteUrl("BlogPost")">CREATE BLOG</a> 
</p>




<div class="customcard">

    @foreach (var item in Model.AllBLogs)
    {
    <div class="card">
        <div class="card-header">
            @item.Name <span style="float:right;"><b>User :&nbsp;&nbsp;&nbsp;</b><span style="text-transform:uppercase;">@item.UserName</span></span>
        </div>
       
       
        <div class="card-body">
            <h5 class="card-title">@item.Description</h5>


            @if (item.IsPrivate)
            {
                <label class="bg-warning" style="float: right;">
                    Private Blog
                </label>
            }
            else
            {
                <label class="bg-info" style="float: right;">
                    Public Blog
                </label>

            }

        </div>
    </div>
    }


   
</div>



